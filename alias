# Shortcut Aliases
alias cls='clear'
alias q='exit'
alias ping-google='ping www.google.com'
alias ping-1='ping 1.1.1.'
alias x-find="xrandr -q | grep ' connected' | head -n 1 | cut -d ' ' -f1"
alias off='systemctl poweroff -i'
alias sleep='systemctl suspend'

# Push display extension left or right
alias p-l='xrandr --output HDMI-1 --auto --left-of eDP-1'
alias p-r='xrandr --output HDMI-1 --auto --right-of eDP-1'

# Change default audio output on the fly - 95% Accuracy
alias audio-hdmi='pacmd set-card-profile 0 output:hdmi-stereo+input:analog-stereo'
alias audio-laptop='pacmd set-card-profile 0 output:analog-stereo+input:analog-stereo'

# xrandr Laptop screen brightness
alias lb-2='xrandr --output eDP-1 --brightness 2'
alias lb-1='xrandr --output eDP-1 --brightness 1'
alias lb-0.7='xrandr --output eDP-1 --brightness 0.7'
alias lb-0.5='xrandr --output eDP-1 --brightness 0.55'
alias lb-0.3='xrandr --output eDP-1 --brightness 0.3'
alias lb-0.1='xrandr --output eDP-1 --brightness 0.15'

# xrandr Display 1 screen brightness
alias d1b-2='xrandr --output HDMI-1 --brightness 2'
alias d1b-1='xrandr --output HDMI-1 --brightness 1'
alias d1b-0.7='xrandr --output HDMI-1 --brightness 0.7'
alias d1b-0.5='xrandr --output HDMI-1 --brightness 0.55'
alias d1b-0.3='xrandr --output HDMI-1 --brightness 0.3'
alias d1b-0.1='xrandr --output HDMI-1 --brightness 0.15'
